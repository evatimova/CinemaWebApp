@model CinemaWeb.Domain.DTO.RemoveFromRoleDto
@{
    ViewData["Title"] = "Remove User From Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remove User From Role</h1>

@using (Html.BeginForm("RemoveFromRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SelectedRole)
        @Html.DropDownListFor(x => x.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />

}